<div class="container">
  <div class="col-xs-6 col-xs-offset-3 ">
    <div class="text-center"><%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :Task %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, :class => "details_input"%>
      </div>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
