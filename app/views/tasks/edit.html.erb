<%= form_for @task do |f|%>
  <div class="form-group">
    <%= f.label :task, "Enter a Task" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details, "Enter details" %>
    <%= f.text_field :details %>
  </div>
  <div class="form-group">
    <%= f.label :completed, "Done?" %>
    <%= f.check_box :completed%>
  </div>
  <%= f.submit %>
<% end %>
